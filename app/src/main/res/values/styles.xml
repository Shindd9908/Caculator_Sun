<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonKeyBroad">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonExtend" parent="ButtonKeyBroad">
        <item name="android:background">@drawable/bg_button_extend</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="ButtonCalculator" parent="ButtonKeyBroad">
        <item name="android:background">@drawable/bg_button_extend</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ButtonOperation" parent="ButtonKeyBroad">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_operation</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>